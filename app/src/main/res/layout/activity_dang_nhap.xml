<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/bgr">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:src="@drawable/img"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:gravity="center"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#FF7A22"
        android:layout_marginBottom="15dp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_tilusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:hint="SĐT / CCCD"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:startIconDrawable="@drawable/ic_baseline_phone_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_sđtdn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:textColor="#000000"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/login_tilpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:hint="Mật Khẩu"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_tilusername"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/ic_baseline_info_24">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ed_mkdn"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:padding="20dp">
        <CheckBox
            android:id="@+id/cb_luumk"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:buttonTint="@color/white"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu mật khẩu"
            android:buttonTint="@color/white"
            android:textColor="@color/white"
            />
    </LinearLayout>


    <Button
        android:id="@+id/btn_dangnhapuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bo_tron_1"
        android:backgroundTint="#31BAF8"
        android:text="Đăng nhập"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="bottom|center_vertical"

        >
        <TextView
            android:id="@+id/tv_quenmatkhau"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu"
            android:gravity="right|center_vertical"
            android:textColor="@color/white"

            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="|"
            android:gravity="center|center_vertical"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/tv_chuadangki"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Chưa đăng ký?"
            android:gravity="right|center_vertical"
            android:textColor="@color/white"
            />
    </LinearLayout>

</LinearLayout>
